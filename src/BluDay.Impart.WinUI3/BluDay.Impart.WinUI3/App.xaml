<?xml version="1.0" encoding="utf-8"?>
<Application x:Class="BluDay.Impart.WinUI3.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls"/>
            </ResourceDictionary.MergedDictionaries>
            
            <SolidColorBrush x:Key="WindowCaptionBackground">Transparent</SolidColorBrush>
            <SolidColorBrush x:Key="WindowCaptionBackgroundDisabled">Transparent</SolidColorBrush>
            <SolidColorBrush x:Key="WindowCaptionForeground">White</SolidColorBrush>

            <Color x:Key="SystemAccentColor">#2c50a0</Color>
            <Color x:Key="SystemAccentColorDark1">#2c50a0</Color>
            <Color x:Key="SystemAccentColorDark2">#2c50a0</Color>
            <Color x:Key="SystemAccentColorDark3">#2c50a0</Color>
            <Color x:Key="SystemAccentColorLight1">#2c50a0</Color>
            <Color x:Key="SystemAccentColorLight2">#2c50a0</Color>
            <Color x:Key="SystemAccentColorLight3">#2c50a0</Color>

            <ImageSource x:Key="AppIconImageSource">../Assets/Square44x44Logo.scale-200.png</ImageSource>
        </ResourceDictionary>
    </Application.Resources>
</Application>