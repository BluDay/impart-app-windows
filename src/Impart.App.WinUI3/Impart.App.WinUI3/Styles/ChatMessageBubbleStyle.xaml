<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--
    <Color x:Key="ChatMessageBubbleBackgroundColor">CornFlowere</Color>
    <Color x:Key="ChatMessageBubbleGreyBackgroundColor">#4B4B4B</Color>
    
    <Color x:Key="ChatMessageBubbleBorderColor">#5188EB</Color>
    <Color x:Key="ChatMessageBubbleGreyBorderColor">#404040</Color>
    -->

    <Thickness x:Key="ChatMessageBubblePadding">10,8</Thickness>

    <!-- Background colors -->
    <StaticResource x:Key="ChatMessageBubbleAccentBackgroundBrush" ResourceKey="SystemControlBackgroundAccentBrush"/>
    <StaticResource x:Key="ChatMessageBubbleBackgroundBrush" ResourceKey="SystemControlBackgroundBaseLowBrush"/>

    <SolidColorBrush x:Key="ChatMessageBubbleRecipientBackgroundBrush" Color="{ThemeResource SystemBaseHighColor}" Opacity="0.1"/>

    <!-- Text colors -->
    <StaticResource x:Key="ChatMessageBubbleAccentTextBrush" ResourceKey="TextOnAccentFillColorPrimaryBrush"/>
    <StaticResource x:Key="ChatMessageBubbleTextBrush" ResourceKey="TextFillColorPrimaryBrush"/>
</ResourceDictionary>