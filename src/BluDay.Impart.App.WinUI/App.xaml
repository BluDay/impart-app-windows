<?xml version="1.0" encoding="utf-8"?>
<Application x:Class="BluDay.Impart.App.WinUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- ( 0 _ o ) -->
            <SolidColorBrush x:Key="WindowCaptionBackground">Transparent</SolidColorBrush>
            <SolidColorBrush x:Key="WindowCaptionBackgroundDisabled">Transparent</SolidColorBrush>
            <SolidColorBrush x:Key="WindowCaptionForeground">White</SolidColorBrush>

            <ImageSource x:Key="AppIconImageSource">Assets/Icons/Square44x44Logo.scale-200.png</ImageSource>

            <TransitionCollection x:Key="FrameContentTransitions">
                <NavigationThemeTransition/>
            </TransitionCollection>
        </ResourceDictionary>
    </Application.Resources>
</Application>