<?xml version="1.0" encoding="utf-8"?>
<Application x:Class="BluDay.Impart.WinUI3.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls"/>
            </ResourceDictionary.MergedDictionaries>
            
            <SolidColorBrush x:Key="WindowCaptionBackground">Transparent</SolidColorBrush>
            <SolidColorBrush x:Key="WindowCaptionBackgroundDisabled">Transparent</SolidColorBrush>
            <SolidColorBrush x:Key="WindowCaptionForeground">White</SolidColorBrush>

            <Color x:Key="SystemAccentColor">#6e50b4</Color>
            <Color x:Key="SystemAccentColorDark1">#6e50b4</Color>
            <Color x:Key="SystemAccentColorDark2">#6e50b4</Color>
            <Color x:Key="SystemAccentColorDark3">#6e50b4</Color>
            <Color x:Key="SystemAccentColorLight1">#6e50b4</Color>
            <Color x:Key="SystemAccentColorLight2">#6e50b4</Color>
            <Color x:Key="SystemAccentColorLight3">#6e50b4</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>